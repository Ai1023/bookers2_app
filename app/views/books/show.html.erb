<%= render 'error', book: @book %>

<div class="container">
  <div class="row">
    <div class= "col-md-3">
      <%= render 'info', user: @user %>
      <%= render 'new', book: @book %>
    </div>


     <div class= "col-md-8 offset-md-1">
     <h2>Book detail</h2>
     <table class='table table-striped'>
        <tr>
          <td>
            <%= link_to user_path(@book.user_id) do %>
            <%= image_tag @user.get_profile_image(100,100) %>
            <nav>
              <%= @book.user.name %>
            </nav>
            <% end %>
          </td>
          <td><%= link_to @book.title %></td>
          <td><%= @book.body %></td>
          <% if @book.user_id == current_user.id %>
          <td><%= link_to "Edit", edit_book_path(@book.id),class:"btn-sm btn-success" %></td>
          <td><%= link_to "Destroy", book_path(@book.id), class:"btn-sm btn-danger destroy(@book.id)", method: :delete,data: {confirm: "Really?"} %></td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>
