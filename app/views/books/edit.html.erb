<div>
  <%= flash[:notice] %>
</div>

<% if @book.errors.any? %>
<%= @book.errors.count %>
<ul>
  <% @book.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
</ul>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto px-0 my-5">
      <h1>Editing Book</h1>
      
      
      <%= form_with model: @book, url: book_path do |f| %>

      <h4>Title</h4>
      <%= f.text_field :title ,class:"col-lg-12" %>

      <h4>Opinion</h4>
      <%= f.text_area :body,class:"col-lg-12" %>

      <nav>
        <%= f.submit 'Update Book',class: "btn btn-success" %>
      </nav>
      <% end %>

      <%= link_to "Show",book_path(@book.id)%>
       |
      <%= link_to "Back",books_path %>
    </div>
  </div>
</div>