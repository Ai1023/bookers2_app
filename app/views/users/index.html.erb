<%= render '/books/error', book: @book %>

<div class="container">
  <div class="row">
    <div class= "col-md-3">
      <%= render '/books/info', user: @user %>
      <%= render '/books/new', book: @book %>
  </div>

  <div class= "col-md-8 offset-md-1">
    <h2>Users</h2>
    <table class='table table-striped'>
      <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image(100,100) %></td>
          <th><%= user.name %><th>
          <th><%= link_to"Show",user_path(user.id) %></th>
      </tr>
      <% end %>
    </table>
  </div>
</div>
</div>