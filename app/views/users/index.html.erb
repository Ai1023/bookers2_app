<div>
  <%= flash[:notice] %>
</div>

<% if @book.errors.any? %>
<%= @book.errors.count %>
<ul>
  <% @book.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
</ul>
<% end %>

<div class="container">
  <div class="row">
    <div class= "col-md-3">
      <h2>User info</h2>
      <%=image_tag @user.get_profile_image(100,100) %>
      <table class="table table-striped">
        <tr>
          <td>name</td>
          <td><%= @user.name %></td>
        </tr>
        <th>
          <td>introduction</td>
          <td><%= @user.introduction %></td>
        </th>
      </table>

        <%= link_to edit_user_path(current_user.id), class: "col-md-12 btn btn-primary" do %>
        <i class="fas fa-user-cog"></i>
        <% end %>


      <%= form_with model: @book, url: books_path do |f| %>


      <h2>New book</h2>
      <h4>Title</h4>
      <%= f.text_field :title %>
      <h4>Opinion</h4>
      <%= f.text_field :body %>
      <nav>
        <%= f.submit 'Create Book',class: "btn btn-primary" %>
      </nav>
    <% end %>
  </div>

  <div class= "col-md-8 offset-md-1">
    <h2>Users</h2>
    <table class='table table-striped'>
      <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image(100,100) %></td>
          <th><%= user.name %><th>
          <th><%= link_to"Show",user_path(user.id) %></th>
      </tr>
      <% end %>
    </table>
  </div>
</div>
</div>