<%= render '/books/error', book: @book %>
<div class="container">
  <div class="row">
    <div class= "col-md-3">
      <%= render '/books/info', user: @user %>
      <%= render '/books/new', book: @book %>
    </div>

    <div class= "col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class='table table-striped'>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>

        <% @books.each do |book| %>
          <%= link_to user_path(@user.id) do %>
          <tr>
            <td><%= image_tag book.user.get_profile_image(100,100) %></td>
          <% end %>

            <td><%=link_to book.title, book_path(book.id)%></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>