<div>
  <%= flash[:notice] %>
</div>

<% if @book.errors.any? %>
<%= @book.errors.count %>
<ul>
  <% @book.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
</ul>
<% end %>


<div class="container">
  <div class="row">
    <div class= "col-md-3">
      <h2>User info</h2>
      <%= image_tag @user.get_profile_image(100,100) %>
      <table class="table table-striped">
        <tr>
          <td>name</td>
          <td><%= @user.name %></td>
        </tr>
        <th>
          <td>introduction</td>
          <td><%= @user.introduction %></td>
        </th>
      </table>

      <%= link_to edit_user_path(@user.id), class: "col-md-12 btn btn-primary" do %>
      <i class="fas fa-user-cog"></i>
      <% end %>

      <%= form_with model: @book, url: books_path do |f| %>


      <h2 class="mt-5">New book</h2>
      <h4>Title</h4>
      <%= f.text_field :title %>
      <h4>Opinipn</h4>
      <%= f.text_field :body %>
      <nav>
        <%= f.submit 'Create Book',class: "btn btn-primary" %>
      </nav>
        <% end %>
    </div>

    <div class= "col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class='table table-striped'>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>

        <% @books.each do |book| %>
          <%= link_to user_path(@user.id) do %>
          <tr>
            <td><%= image_tag book.user.get_profile_image(100,100) %></td>
          <% end %>

            <td><%=link_to book.title, book_path(book.id)%></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>