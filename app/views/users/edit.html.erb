<div>
  <%= flash[:notice] %>
</div>

<% if @user.errors.any? %>
<%= @user.errors.count %>
<ul>
  <% @user.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
</ul>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto px-0 my-5">

      <h2>User info</h2>

      <%= form_with model: @user, url: user_path(current_user.id) do |f| %>
      
      
      <h4>Name</h4>
      <%= f.text_field :name %>
      <h4>Image</h4>
      <%= f.file_field :profile_image %>
      <h4>introduction</h4>
      <%= f.text_area :introduction %>
      <nav>
        <%= f.submit 'Update User', class: "btn btn-primary" %>
      </nav>
      <% end %>
    </div>
  </div>
</div.
